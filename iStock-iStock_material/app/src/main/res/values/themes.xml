<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.IStock" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/purple_700</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="textAppearanceButton">@style/TextAppearance.App.Button</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="TextAppearance.App.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">start</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Theme.IStock.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.IStock.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.IStock.PopupOverlay" parent="ToolbarTheme" />


    <style name="MyTheme.ActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:titleTextStyle">@style/MyTheme.ActionBar.TitleTextStyle</item>
    </style>

    <style name="MyTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/black</item>
    </style>

    <style name="Widget.App.NavigationView" parent="Widget.MaterialComponents.NavigationView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.NavigationView</item>
        <item name="itemIconTint">@color/navigation_item_color</item>
        <item name="itemTextColor">@color/navigation_item_color</item>
        <item name="itemShapeFillColor">@color/navigation_item_background_color</item>
    </style>

    <style name="ThemeOverlay.App.NavigationView" parent="">
        <item name="colorPrimary">@color/purple_700</item>
        <item name="colorSurface">@color/purple_700_70</item>
        <item name="colorOnSurface">@color/side_menu_text_color_gray</item>
    </style>

    <style name="edittext_style">
        <item name="android:singleLine">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/editext_bg</item>
        <item name="android:drawableEnd">@drawable/down_arrow_edit_text</item>
        <item name="android:padding">@dimen/_5sdp</item>
        <item name="android:textSize">@dimen/_11ssp</item>

    </style>

    <style name="edittext_style_multiline">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/editext_bg</item>
        <item name="android:padding">@dimen/_5sdp</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:gravity">start|top</item>


    </style>

    <style name="edittext_style_without_drawable">
        <item name="android:singleLine">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/editext_bg</item>
        <item name="android:padding">@dimen/_5sdp</item>
        <item name="android:textSize">@dimen/_11ssp</item>

    </style>

    <style name="edittext_style_tab">
        <item name="android:singleLine">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@drawable/editext_bg</item>
        <item name="android:drawableEnd">@drawable/down_arrow_edit_text</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">16sp</item>

    </style>

    <style name="edittext_style_without_drawable_tab">
        <item name="android:singleLine">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@drawable/editext_bg</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">18sp</item>

    </style>

    <style name="MineCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>